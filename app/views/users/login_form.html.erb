<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン画面</div>
    <div class="form users-form">
      <div class="form-body">
        <%= form_for @user do |f| %>
          <%= f.label "メールアドレス※" %>
          <%= f.text_field :email, value: @email %> 
          <%= f.label "パスワード※" %>
          <%= f.label "半角英数字８文字以上" %>
          <!-- TODO:パスワードを伏字になるようにするには？ -->
          <%= f.password_field :password, value: @password %> 
        <% end %> 
      </div>
    </div>
  </div>
</div>
