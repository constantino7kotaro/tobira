<div class="main users-edit">
  <div class="container">
    <div class="form-heading">プロフィールの設定</div>
    <p>*は入力必須項目です。</p>

    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_for @user, url: { controller: :users, action: :update }, html: {method: 'PUT'} do |f| %>
          <%= f.label "プロフィール画像" %>
          <%= f.text_field :image %>
          <%= f.label "名前（非公開)※" %>
          <%= f.text_field :name %>
          <%= f.label "ニックネーム※" %>
          <%= f.text_field :nickname %>
          <%= f.label "年齢" %>
          <%= f.text_field :age %>
          <%= f.label "自己紹介" %>
          <%= f.text_area :introduction %>
          <%= f.submit "保存" %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>
