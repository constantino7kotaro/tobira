<h1>条件検索</h1>

<%= search_form_for @q, url: '/lessons/search' do |f| %>
  <%= f.label "エリア" %>
    <%= f.collection_select :area_id_eq, Area.all, :id, :name, :include_blank => '指定なし'%>
    <%= f.label "スキル" %>
    <%= f.collection_select :skill_id_eq, Skill.all, :id, :name, :include_blank => '指定なし' %>
    <%= f.label "レッスン形式" %>
    <%= f.collection_select :lesson_type_id_eq, LessonType.all, :id, :name, :include_blank => '指定なし' %>
  <div class="actions"><%= f.submit "検索" %></div>
<% end %>

<div>
  <div>
    <h1>ホスト一覧</h1>
    <% @lessons.each do |lesson| %>
      <div class="lessons-index-item">
        <!-- TODO:プロフィール画像表示 -->
        
        <div class="lesson-center">
          <div class="lesson-user-name">
            <%= link_to(lesson.user.nickname, "/lessons/#{lesson.user.id}") %>
            <%= lesson.skill.name %>
            <%= lesson.area.name %>
            <%= lesson.lesson_type.name %>
          </div>
        </div>
        
        <div class="lesson-right" >
          <%= lesson.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>
